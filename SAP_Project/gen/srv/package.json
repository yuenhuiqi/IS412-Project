{
  "name": "riverkleaner",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/xssec": "^3",
    "express": "^4",
    "hdb": "^0.19.5",
    "passport": "^0.6.0",
    "sqlite3": "^5.0.11",
    "xhr2": "^0.2.1"
  },
  "devDependencies": {
    "@sap/hdi-deploy": "^4.3.3",
    "@sap/ux-specification": "^1.100.4"
  },
  "engines": {
    "node": "^16"
  },
  "scripts": {
    "start": "cds run",
    "build": "cds build/all --clean"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana-cloud"
      }
    }
  },
  "hana": {
    "deploy-format": "hdbtable"
  }
}